- content_for("page_scripts") do
  :plain
    $(window).load(function() {
      $('#login').focus()
    });

%h1= t 'forgot_password'
%p== #{t 'enter_username_for_password'}:
%p
  - form_tag forgot_password_path do
    %label{:for => "login"}
      == #{t 'enter_username'}:
      = text_field_tag 'login'
      = submit_tag t('submit')
