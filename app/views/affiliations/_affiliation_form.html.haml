-# TODO Internationalize
- form_for(affiliation_form) do |f|
  = f.error_messages
  %p
    %div
      %b Location:
    %div
      = @affiliation.location.name
      = f.hidden_field :location_id
  - if @affiliation.affiliate
    %p
      %div
        %b Affiliate:
      %div
        = @affiliation.affiliate.name
        = f.hidden_field :affiliate_id
  %p
    %div
      %b Expires:
    %div
      = f.text_field :expires
  %p
    %div
      %b Foreign Key:
    %div
      = f.text_field :foreign_key

  %p
    = f.submit submit_button_label
