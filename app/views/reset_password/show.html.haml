%h1= t 'new_password'
- form_tag({:id => @user.perishable_token}, {:method => :put}) do
  = error_messages_for :user
  %p= t 'please_enter_password'
  %table
    %tr
      %td
        %label{:for => 'password'}
          == #{t 'password'}:
      %td= password_field_tag 'password'
    %tr
      %td
        %label{:for => 'password_confirmation'}
          == #{t 'confirm_password'}:
      %td= password_field_tag 'password_confirmation'
  %p= submit_tag t('reset_password')
