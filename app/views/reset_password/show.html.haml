%h1 New Password
- form_tag({:id => @user.perishable_token}, {:method => :put}) do
  = error_messages_for :user
  %p Please enter your new password below.  Don't forget your password!
  %table
    %tr
      %td
        %label{:for => 'password'}
          Password:
      %td= password_field_tag 'password'
    %tr
      %td
        %label{:for => 'password_confirmation'}
          Confirm Password:
      %td= password_field_tag 'password_confirmation'
  %p= submit_tag "Reset Password"
