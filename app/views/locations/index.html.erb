<h1>Listing locations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Street address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip code</th>
    <th>Phone number</th>
    <th>Hours</th>
  </tr>

<% for location in @locations %>
  <tr>
    <td><%=h location.name %></td>
    <td><%=h location.type_id %></td>
    <td><%=h location.street_address %></td>
    <td><%=h location.city %></td>
    <td><%=h location.state %></td>
    <td><%=h location.zip_code %></td>
    <td><%=h location.phone_number %></td>
    <td><%=h location.hours %></td>
    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

